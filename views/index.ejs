  <body>
    <div class="container">
      <h1>Google recaptcha tutorial</h1><br>
      <form method="post" action="captcha">
        <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">
        <input type="hidden" name="action" value="validate_captcha">
        <div class="row">
          <div class="col-md-4"></div>
          <div class="form-group col-md-4">
            <label for="name">Name:</label>
            <input type="text" class="form-control" name="name">
          </div>
        </div>
        <div class="form">
          <div class="col-md-4"></div>
          <button type="submit" class="btn btn-success" style="margin-left:38px">Send</button>
        </div>
      </form>
    </div>

    
    <script src="https://www.google.com/recaptcha/api.js?render=site key here"></script>
    <script>
      grecaptcha.ready(function() {
        //the request function goes here
        //refer to https://www.npmjs.com/package/request
        //try node-fetch here man! implement the same thing yo!
        grecaptcha.execute('site key here',  {action: "validate_captcha"})
        .then(function(token) {
          //add token here
          document.getElementById("g-recaptcha-response").value = token;
        })
      })


    </script>


  </body>
